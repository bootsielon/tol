//////////////////////////////////////////////////////////////////////////////
// FILE   : RandomText.tol
// PURPOSE: Functions to generate randomized strings
//////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////////
  Struct @TxtLenInfo
//////////////////////////////////////////////////////////////////////////////
{
  Text txt_,
  Real len_
};

//////////////////////////////////////////////////////////////////////////////
  Text RandomText(Real length)
//////////////////////////////////////////////////////////////////////////////
{
  If(!length,"", SetSum(For(1,length,Text(Real k)
  { 
    Char(IntRand(1,255))
  })))
};

//////////////////////////////////////////////////////////////////////////////
  Set RandomSetOfTxtLenInfo(Real size, Real maxLength)
//////////////////////////////////////////////////////////////////////////////
{
  For(1,size,Set(Real k)
  { 
    Real len = IntRand(0, maxLength);
    Text txt = RandomText(len);
    @TxtLenInfo(txt,len)
  })
};


