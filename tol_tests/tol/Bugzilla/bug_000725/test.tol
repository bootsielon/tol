//Sets the bugzilla identifier number, your e-mail and the bug´s summary
  Real bugNum_ =  725;
  Text email_ = "vdebuen@tol-project.org"; 
  Text summary_ = 
  "Fail creating class instances with functions taking just one argument "
  "of type NameBlock";
  Text link_ = GetTolBugzillaLink(bugNum_);

  //Write here the initial test TOL code if needed
  Real numErr0 = Copy(NError);
  Real numWar0 = Copy(NWarning);
    
  Class @ClassA 
  {
    Text _.name;
    Real _.length
  };

  @ClassA ClassA.New(NameBlock args)
  {
    @ClassA a = [[
      Text _.name   = args::name,
      Real _.length = TextLength(args::name)
    ]]
  };

  @ClassA a = 
  {
    NameBlock args = [[Text name="lkshfli"]];
    ClassA.New(args)
  };

  @ClassA b = ClassA.New({args=[[Text name="lkshfli"]]});

  @ClassA c = ClassA.New([[Text name="lkshfli"]]);

  Real numErr1 = Copy(NError);
  Real numWar1 = Copy(NWarning);

  Set partialResults_ = [[numErr0, numErr1]];

//This is a messure of the success of the test 
  Real quality_ = And(numErr1 == numErr0, 
                      numWar1 == numWar0);

//Return the results 
  Set resultStr_ = @strTestStatus(summary_, link_, quality_,
                    "Partial results = "<<partialResults_,
                    "NO DBServerType", "NO DBServerHost", "NO DBAlias",
                    email_);
  WriteLn(""<<resultStr_);
  resultStr_;

