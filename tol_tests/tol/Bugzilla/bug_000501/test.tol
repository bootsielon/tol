  Real numErr0 = Copy(NError);
  Matrix nu  = Col(0, 2);
  Matrix L   = Rand(0,0,0,0);
  Matrix c1  = Col(-1, 0.5);
  Matrix c2  = Col( 1, 1.5);
  Matrix MCsample = RandTruncatedMultNormal(nu, L, c1, c2, 1, 100);
  Real numErr1 = Copy(NError);

//Extented information about test behaviour
  Set partialResults_ = 
  [[
    Real ok = numErr1 == numErr0+1
  ]];

