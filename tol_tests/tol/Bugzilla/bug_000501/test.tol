  Real bugNum_ = 501;
  Text email_ = "vdebuen@tol-project.org"; 
  Text summary_ = "TOL crashes when L is a 0x0 matrix in RandTruncatedMultNormal";
  Text link_ = GetTolBugzillaLink(bugNum_);

