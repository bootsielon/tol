////////////////////////////////////////////////////////////////////////////////
Real sum_harmonic_cycle(Real n)
////////////////////////////////////////////////////////////////////////////////
{
  Real i=1;
  Real zz = 0;
  While(i<=n,
  {
    zz := zz + i^-2;
    i := i+1
  });
  Copy(zz)
};

////////////////////////////////////////////////////////////////////////////////
Real sum_harmonic_matrix(Real n)
////////////////////////////////////////////////////////////////////////////////
{
  Matrix aux1 = DifEq(1/(1-B),Constant(n,1,1));
  Matrix aux2 = RPow(aux1, -2);
  Matrix aux3 = DifEq(1/(1-B),aux2);
  MatDat(aux3,n,1)
};

