//////////////////////////////////////////////////////////////////////////////
// FILE   : test.tol
// PURPOSE: test for CINT API
//////////////////////////////////////////////////////////////////////////////

Text email_ = "vdebuen@tol-project.org"; 
Text link_ = "";
Text summary_ = "Test for CINT API. Exporting CINT variables to TOL." ;


//Write here the initial test TOL code if needed

Real numErr0 = Copy(NError);

#Require TolCint;

Real N = 1000;
Real Cint.exec_text("
Matrix mat_cint("<<N+",1);
for(int i=1; i<=mat_cint.rows_; i++)
{
  mat_cint(i,1) = pow(i,-3);
}
");

Matrix Cint.export_to_tol("mat_cint");

Matrix mat_tol = RPow(SetCol(Range(1,N,1)),-3);

Real maxErr = MatMax(Abs(mat_tol-mat_cint));

Real numErr1 = Copy(NError);

//Extented information about test behaviour
Set partialResults_ = 
[[
  numErr0,
  numErr1,
  maxErr
]];

//This is a messure of the success of the test 
Real quality_ = And(
  numErr0 == numErr1,
  maxErr == 0);

//Return the results 
Set resultStr_ = @strTestStatus(summary_, link_, quality_,
                  "Partial results = "<<partialResults_,
                  "NO DBServerType", "NO DBServerHost", "NO DBAlias",
                  email_);
WriteLn(""<<resultStr_);
WriteLn("NObject="<<NObject);
WriteLn("NCore="<<NCore);
resultStr_
