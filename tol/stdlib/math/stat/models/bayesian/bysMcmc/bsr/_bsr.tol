//////////////////////////////////////////////////////////////////////////////
// FILE   : _bsr.tol
// PURPOSE: Bayesian Sparse Regression methods
//////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////////
NameBlock Bsr =
//////////////////////////////////////////////////////////////////////////////
[[
  //read only autodoc
  Text _.autodoc.description =
  "Bayesian Sparse Regression methods.";

  //BSR Gibbs simulation engines
  Set _gibbs = Include("gibbs/_gibbs.tol");
  NameBlock Gibbs;

  //Generic API to define arbitrary BSR basic models from virtual methods
  Set _import = Include("_import.tol");
  NameBlock Import;

  //Robust API to define and store massive BSR basic models in a standard 
  //data base
  Set _dynHlm = Include("dynhlm/_dynhlm.tol");
  NameBlock DynHlm;

  //Simplified API to handle with models with just one observational node
  Set _oneNode = Include("_oneNode.tol");
  NameBlock OneNode

]];
  




