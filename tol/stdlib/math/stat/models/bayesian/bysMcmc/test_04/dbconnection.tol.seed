NameBlock DBConnection =
[[
  NameBlock BsrHlm = DBConnect::Create(
    "BsrHlm","my_user","my_password", 
    "my_driver", "my_database", "my_host", 
    "Almacenamiento de modelos BSR-DynHLM");
  Real check = Real DBConnect::CheckAll(0)
]];
