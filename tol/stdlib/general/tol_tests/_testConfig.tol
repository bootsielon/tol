//////////////////////////////////////////////////////////////////////////////
// Declarations to maintain backward compatibility with old TOL versions
//////////////////////////////////////////////////////////////////////////////
Text  If(ObjectExist("Text","CppCompiler"),CppCompiler,
	 CppCompiler = If(OSName=="WINDOWS","MSVC_1200","GCC_2"));
Real  If(ObjectExist("Real","NError"),NError,NError = ?);
Real  If(ObjectExist("Real","NWarning"),NWarning,NWarning = ?);
Code  If(FunctionExist("Set","MemoryStatus"),MemoryStatus,
Set MemoryStatus(Real unused)
{
  SetOfReal
  (
    MemoryLoad	   = ?,
    TotalPhys	     = ?,
    AvailPhys	     = ?,
    TotalPageFile  = ?,
    AvailPageFile  = ?,
    TotalVirtual   = ?,
    AvailVirtual   = ?
  )
});

//////////////////////////////////////////////////////////////////////////////
// The path for common tcl tester code when testing Toltcl
//////////////////////////////////////////////////////////////////////////////
Text ToltclTester=GetAbsolutePath("_toltclTester.tcl");

